@model IEnumerable<PMS10.Models.Shift>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shift_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hours)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Shift_ID)
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Shift_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Shift_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Shift_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
